{
  "manifest_version": 2,

  "name": "Треккинг комментариев групп vk.com",
  "homepage_url": "https://github.com/kovnir",
  "description": "Позволяет вам получать уведомления о новых комментариях в вашей группе.",
  "version": "1.1",

  "permissions": [ "storage", "tabs", "http://*/*", "https://*/*" ],

  
  "background": { "scripts": [ "bgscript.js" ]},
    
    "browser_action" :
    {
      "default_popup": "popup.html" 
    },
  
  "icons": {
    "16" : "icon.png",
    "48" : "icon.png",
    "128" : "icon.png"
  } 
}
